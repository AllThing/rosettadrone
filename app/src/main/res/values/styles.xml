<resources>

    <style name="AppDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaseThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="iconSettings">@drawable/ic_settings_white_24dp</item>-->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

    </style>

    <!-- SettingsActivity Theme -->
    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
</resources>